<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <%= render user %>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <% if (current_user.admin?) %>
    <%= link_to("Add user", new_user_path, :class => 'button-xs') %>
  <% end %>
</div>
<br>

<%= link_to 'New User', new_user_path %>
