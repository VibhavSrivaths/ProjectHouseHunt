<p id="notice"><%= notice %></p>

<h1>Houses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3">RECompany</th>
      <th colspan="3">User</th>
      <th colspan="3">Location</th>
      <th colspan="3">Area</th>
      <th colspan="3">Year built</th>
      <th colspan="3">Style</th>
      <th colspan="3">Floors</th>
      <th colspan="3">Owner</th>
      <th colspan="3">Email</th>
      <th colspan="3">Phone</th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.location %>  </td>
        <td> <%= house.area %></td>
        <td> <%= house.year_built%> </td>
        <td> <%= house.style%> </td>
        <td> <%= house.price %> </td>
        <td> <%= house.floors %> </td>
        <td> <%= house.owner %> </td>
        <td><%= house.email %>  </td>
        <td> <%= house.phone %> </td>
        <td> <%= link_to 'Show', house %> </td>
        <td> <%= link_to 'Edit', edit_house_path(house) %></td>
        <td> <%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Confirm.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New House', new_house_path, :class => 'button-xs' %>
